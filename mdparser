#!/usr/bin/env node
var argv = require('minimist')(process.argv.slice(2));

var filename = argv._[0],
    watch = argv.w,
    generateHtml = argv.h,
    output = argv.o;

//pull out base language for file from extension mapped to type: extension map + l aka .ljs -> javascript

var Parser = require('./bin/mdparser.js');
new Parser(filename, watch, generateHtml, output);
